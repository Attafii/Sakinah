{
  "manifest_version": 3,
  "name": "Sakinah",
  "version": "1.0.0",
  "description": "Find peace through the Qur'an with random Ayahs, AI-guided spiritual guidance, and customizable notifications.",

  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sakinah - Find peace through the Qur'an"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["quran.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}