{
  "manifest_version": 3,
  "name": "Sakinah",
  "version": "1.0.2",
  "description": "Find peace through the Qur'an with random Ayahs, AI-guided spiritual guidance, and customizable notifications.",

  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "identity"
  ],
  "optional_permissions": [
    "bookmarks",
    "sessions",
    "topSites",
    "history"
  ],
  "host_permissions": [
    "https://sakinah-ai-proxy.attafiahmed-dev.workers.dev/*",
    "https://api.aladhan.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/Sakinah.png",
    "32": "icons/Sakinah.png",
    "48": "icons/Sakinah.png",
    "128": "icons/Sakinah.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sakinah - Find peace through the Qur'an"
  },
  "options_page": "options.html",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}